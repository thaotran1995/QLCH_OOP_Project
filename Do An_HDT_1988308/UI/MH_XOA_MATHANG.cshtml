@using Do_An_HDT_1988308.Service;
@using Do_An_HDT_1988308.Entities;
@using System.Globalization;
@{
    Layout = null;
    string chuoi = string.Empty;
    var maMH = int.Parse(Request["id"]);
    var xl = new XL_MATHANG();
    if(IsPost)
    {
        xl.XoaMatHang(maMH);
        Response.Redirect("~/UI/MH_DS_MATHANG.cshtml");
    }
    else
    {
        chuoi = $"Bạn có muốn xóa Mạt hàng với ID: {maMH} hay Không???";
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Xóa MH</title>
</head>
<body>
    <div>
        <h2>Xóa Mặt Hàng</h2>
        @chuoi
        <form action="~/UI/MH_XOA_MATHANG.cshtml?id=@maMH" method="post">
           
            <input type="submit" value="Xóa" /><br /><br />
        </form>

    </div>
</body>
</html>
